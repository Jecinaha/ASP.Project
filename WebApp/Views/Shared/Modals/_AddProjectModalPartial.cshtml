@model AddProjectViewModel

<section id="add-project-modal" class="modal hide">
    <div class="card">
        <div class="card-header">
            <h3>Add Project</h3>
            <button data-type="close" data-target="add-project-modal" class="btn-close"></button>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data" asp-controller="Projects" asp-action="AddProject" novalidate>
                <div class="form-group" data-upload-group>
                    <div class="image-preview-container project-image" data-upload-trigger>
                        <img class="hide" src="#" alt="Image Preview" data-upload-preview />
                        <div class="circle circle-gray" data-upload-icon-container>
                            <i class="fa-solid fa-camera" data-upload-icon></i>
                        </div>
                    </div>
                    <input type="file" accept="image/*" hidden asp-for="ProjectImage" />
                </div>

                <div class="form-group">
                    <label class="form-label">Project Name</label>
                    <input type="text" class="form-input" placeholder="Project Name" asp-for="ProjectName">
                </div>

                <div class="form-group">
                    <label class="form-label">Client Name</label>
                    <input type="text" class="form-input" placeholder="Client Name" asp-for="ClientName">
                </div>

                <div class="form-group">
                    <label class="form-label">Description</label>
                    <div class="wysiwyg">
                        <textarea asp-for="Sescription"></textarea>
                        <div class="wysiwyg-editor" id="wysiwyg-editor" data-quill-editor></div>
                        <div id="project-toolbar" class="wysiwyg-toolbar">
                            <span class="ql-formats">
                                <button class="ql-bold"></button>
                                <button class="ql-italic"></button>
                                <button class="ql-underline"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-align" value=""></button>
                                <button class="ql-align" value="center"></button>
                                <button class="ql-align" value="right"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-list" value="bullet"></button>
                                <button class="ql-list" value="ordered"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-link"></button>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-horizontal-group">
                    <div class="form-group">
                        <label class="form-label">Start Date</label>
                        <input type="date" class="form-input" asp-for="StartDate">
                    </div>
                    <div class="form-group">
                        <label class="form-label">End Date</label>
                        <input type="date" class="form-input" asp-for="EndDate">
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Budget</label>
                    <div class="form-input-extended">
                        <i class="fa-solid fa-dollar-sign"></i>
                        <input type="text" class="form-input" placeholder="0" asp-for="Budget"/>
                    </div>
                </div>

                <button type="submit" class="btn">Create</button>
            </form>
        </div>
    </div>
</section>