@model SignUpViewModel

@{
    Layout = "_CenterWrapperLayout";
    ViewData["Title"] = "Create Account";
}

<section id="signup">
    <div class="card">
        <div class="card-header">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="SignUp" asp-action="SignUp" novalidate>
                <div class="form-group">
                    <label class="form-label" asp-for="FirstName"></label>
                    <input class="form-input" asp-for="FirstName" />
                    <span asp-asp-validation-for="FirstName"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="LastName"></label>
                    <input class="form-input" asp-for="LastName" />
                    <span asp-asp-validation-for="LastName"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Email"></label>
                    <input class="form-input" asp-for="Email" />
                    <span asp-asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Password"></label>
                    <input class="form-input" asp-for="Password" />
                    <span asp-asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="ConfirmPassword"></label>
                    <input class="form-input" asp-for="ConfirmPassword" />
                    <span asp-asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="form-checkbox-group">
                    <label class="form-checkbox">
                        <input asp-for="Terms" class="form-checkbox-input" />
                        <span class="form-checkbox-box"></span>
                    </label>
                    <div class="terms">
                        <label asp-for="Terms" class="form-label hide"></label>
                        <span>I accept</span>
                        <a href="#">Terms and Conditions</a>
                    </div>
                </div>

                <button type="submit" class="btn">Create Account</button>
            </form>
        </div>

        <div class="card-footer">Already have an account? <a asp-asp-controller="Login" asp-action="Login">Log in</a></div>
    </div>
</section>